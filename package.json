{
  "name": "file-combiner",
  "displayName": "File Combiner",
  "description": "Combines multiple files into a single text file",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "folder.png",
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-combiner-sidebar",
          "title": "File Combiner",
          "icon": "$(file-text)"
        }
      ]
    },
    "views": {
      "file-combiner-sidebar": [
        {
          "type": "webview",
          "id": "fileCombinerView",
          "name": "File Combiner"
        }
      ]
    },
    "commands": [
      {
        "command": "file-combiner.refresh",
        "title": "Refresh File List",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "file-combiner.refresh",
          "when": "view == fileCombinerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}